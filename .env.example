# ===========================================
# Lead Scoring CRM - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Configuration
NODE_ENV=development
PORT=3001

# Security Configuration (Required)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=generate-a-secure-random-string-at-least-64-characters-long
JWT_EXPIRES_IN=7d

# CSRF Secret (Required for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
CSRF_SECRET=generate-a-secure-random-string-here

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Groq AI Configuration (Required for company research)
GROQ_API_KEY=your-groq-api-key-here

# Tavily API Configuration (Optional - for web search)
TAVILY_API_KEY=your-tavily-api-key-here

# Serper API Configuration (Optional - for Google Search)
SERPER_API_KEY=your-serper-api-key-here

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false
CACHE_TTL_SECONDS=600

# Analytics Configuration (Optional)
GA_TRACKING_ID=
ENABLE_ANALYTICS=false

# Lead Scoring Configuration
HOT_LEAD_THRESHOLD=80
WARM_LEAD_THRESHOLD=60
QUALIFIED_LEAD_THRESHOLD=40

# ===========================================
# SECURITY WARNINGS
# ===========================================
# 1. NEVER use default JWT_SECRET in production
# 2. NEVER commit real API keys to version control
# 3. Rotate keys immediately if exposed
# 4. Use strong, unique secrets for each environment
# ===========================================
